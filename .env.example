# API Keys
OPENAI_API_KEY=your_openai_api_key_here

# Model Configuration
DEFAULT_MODEL=gpt-3.5-turbo  # Options: gpt-3.5-turbo, gpt-4
TEMPERATURE=0.7             # Range: 0.0 to 1.0
MAX_TOKENS=1000            # Maximum response length

# Storage Paths (relative to project root)
CACHE_DIR=data/cache      # Cache directory for temporary files
INDEX_DIR=data/index      # Directory for search indices
MODEL_DIR=data/models     # Directory for model weights and configs

# Logging Configuration
LOG_LEVEL=INFO           # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=data/app.log    # Main log file location

# Web Interface Settings
STREAMLIT_PORT=8501      # Port for the Streamlit web application
STREAMLIT_THEME=light    # Options: light, dark 